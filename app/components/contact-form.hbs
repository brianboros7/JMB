<BsForm class="w-50 p-2" @formLayout="vertical" @model={{this}}  as |form|>
    <form.element @controlType="name" @label="Name" @placeholder="Name" @property="name"  />
    <form.element @controlType="email" @label="Email" @placeholder="Email" @property="email" />
    <form.element @controlType="textarea" @label="Description" @property="textarea" />
    <BsButton @defaultText="Submit" @type="primary" @buttonType="submit" />
</BsForm>